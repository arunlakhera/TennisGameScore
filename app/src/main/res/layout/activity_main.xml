<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundBlack"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/player_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/reset_button"
            android:layout_alignParentTop="true"
            android:background="@color/backgroundBlack"
            android:orientation="horizontal"
            tools:context="com.example.android.tennisgamescore.MainActivity">

            <LinearLayout
                android:id="@+id/player1_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/player1_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/nadal" />

                <TextView
                    android:id="@+id/player1_name_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/player"
                    android:textAlignment="center"
                    android:textColor="@color/textBlue"
                    android:textSize="@dimen/name_TextSize"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_Line"
                    android:background="@color/backgroundWhite" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/player1_set_1_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/set1"
                        android:textAlignment="center"
                        android:textColor="@color/textGray"
                        android:textSize="@dimen/label_Med_TextSize" />

                    <TextView
                        android:id="@+id/player1_set_2_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/set2"
                        android:textAlignment="center"
                        android:textColor="@color/textGray"
                        android:textSize="@dimen/label_Med_TextSize" />

                    <TextView
                        android:id="@+id/player1_set_3_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/set3"
                        android:textAlignment="center"
                        android:textColor="@color/textGray"
                        android:textSize="@dimen/label_Med_TextSize" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_Line"
                    android:background="@color/backgroundWhite" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/player1_set_1_score"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/set_default"
                        android:textAlignment="center"
                        android:textColor="@color/textGray"
                        android:textSize="@dimen/label_Lar_TextSize" />

                    <TextView
                        android:id="@+id/player1_set_2_score"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/set_default"
                        android:textAlignment="center"
                        android:textColor="@color/textGray"
                        android:textSize="@dimen/label_Lar_TextSize" />

                    <TextView
                        android:id="@+id/player1_set_3_score"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/set_default"
                        android:textAlignment="center"
                        android:textColor="@color/textGray"
                        android:textSize="@dimen/label_Lar_TextSize" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_Line"
                    android:background="@color/backgroundWhite" />

                <TextView
                    android:id="@+id/player1_serve_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/set_default"
                    android:textAlignment="center"
                    android:textColor="@color/textWhite"
                    android:textSize="@dimen/currentScore_TextSize" />

                <Button
                    android:id="@+id/player1_AddPoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/backgroundBlue"
                    android:text="@string/add_point"
                    android:textColor="@color/textWhite"
                    android:textSize="@dimen/label_Med_TextSize" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/v_Line"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/player2_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/player2_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/rogerfederer2" />

                <TextView
                    android:id="@+id/player2_name_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/player"
                    android:textAlignment="center"
                    android:textColor="@color/textBlue"
                    android:textSize="@dimen/name_TextSize"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_Line"
                    android:background="@color/backgroundWhite" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/player2_set_1_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/set1"
                        android:textAlignment="center"
                        android:textColor="@color/textGray"
                        android:textSize="@dimen/label_Med_TextSize" />

                    <TextView
                        android:id="@+id/player2_set_2_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/set2"
                        android:textAlignment="center"
                        android:textColor="@color/textGray"
                        android:textSize="@dimen/label_Med_TextSize" />

                    <TextView
                        android:id="@+id/player2_set_3_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/set3"
                        android:textAlignment="center"
                        android:textColor="@color/textGray"
                        android:textSize="@dimen/label_Med_TextSize" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_Line"
                    android:background="@color/backgroundWhite" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/player2_set_1_score"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/set_default"
                        android:textAlignment="center"
                        android:textColor="@color/textGray"
                        android:textSize="@dimen/label_Lar_TextSize" />

                    <TextView
                        android:id="@+id/player2_set_2_score"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/set_default"
                        android:textAlignment="center"
                        android:textColor="@color/textGray"
                        android:textSize="@dimen/label_Lar_TextSize" />

                    <TextView
                        android:id="@+id/player2_set_3_score"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/set_default"
                        android:textAlignment="center"
                        android:textColor="@color/textGray"
                        android:textSize="@dimen/label_Lar_TextSize" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_Line"
                    android:background="@color/backgroundWhite" />

                <TextView
                    android:id="@+id/player2_serve_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/set_default"
                    android:textAlignment="center"
                    android:textColor="@color/textWhite"
                    android:textSize="@dimen/currentScore_TextSize" />

                <Button
                    android:id="@+id/player2_AddPoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/backgroundBlue"
                    android:text="@string/add_point"
                    android:textColor="@color/textWhite"
                    android:textSize="@dimen/label_Med_TextSize" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/reset_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/backgroundGreen"
            android:onClick="resetScore"
            android:text="@string/reset"
            android:textColor="@color/textWhite"
            android:textSize="@dimen/label_Lar_TextSize" />

    </RelativeLayout>
</ScrollView>